{
  "name": "vscode-mtldbg",
  "displayName": "MUGEN Debugger",
  "description": "A debugger for MUGEN character code (CNS, MTL, MDK)",
  "version": "0.2.1",
  "publisher": "ZiddiaMUGEN",
  "icon": "mugen.png",
  "repository": {
    "url": "https://github.com/ZiddiaMUGEN/MDK"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "author": {
    "name": "Ziddia",
    "email": "joshua.barton.smith12@gmail.com"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:mtldbg",
    "onDebugDynamicConfigurations:mtldbg",
    "onCommand:extension.vscode-mtldbg.getFileInput"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "python"
      },
      {
        "language": "cns"
      },
      {
        "language": "st"
      },
      {
        "language": "mtl"
      },
      {
        "language": "ini"
      }
    ],
    "debuggers": [
      {
        "type": "mtldbg",
        "label": "MTL Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program",
              "database"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the MTL or Python source file to compile for debugging. If using `generate`, pass the CNS character's DEF file here.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "database": {
                "type": "string",
                "description": "Path to the MTL debugging database which will be output after compilation.",
                "default": "${workspaceFolder}/${command:AskForDatabaseName}"
              },
              "pythonPath": {
                "type": "string",
                "description": "Path to the Python executable to use for compilation.",
                "default": "${workspaceFolder}/${command:AskForPythonPath}"
              },
              "mugenPath": {
                "type": "string",
                "description": "Path to the MUGEN executable to use for debugging.",
                "default": "${workspaceFolder}/${command:AskForMUGENPath}"
              },
              "build": {
                "type": "boolean",
                "description": "Run a build step before launching debugger.",
                "default": true
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "generate": {
                "type": "boolean",
                "description": "Set to `true` to generate a debugging file on launch. Use this if you provide a CNS DEF file in program.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mtldbg",
            "request": "launch",
            "name": "Debug in MUGEN",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "database": "${workspaceFolder}/${command:AskForDatabaseName}",
            "pythonPath": "${command:AskForPythonPath}",
            "mugenPath": "${command:AskForMUGENPath}",
            "build": false,
            "generate": false,
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "MUGEN Debug: Launch",
            "description": "A new configuration for debugging MDK programs",
            "body": {
              "type": "mtldbg",
              "request": "launch",
              "name": "${3:Launch Program}",
              "program": "^\"\\${workspaceFolder}/${1:Program}\"",
              "database": "^\"\\${workspaceFolder}/${2:Database}\"",
              "pythonPath": "^\"\\${workspaceFolder}/${4:Python}\"",
              "mugenPath": "^\"\\${workspaceFolder}/${5:MUGEN}\"",
              "build": false,
              "generate": false,
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.vscode-mtldbg.getFileInput",
          "AskForDatabaseName": "extension.vscode-mtldbg.getFileInput",
          "AskForPythonPath": "extension.vscode-mtldbg.getFileInput",
          "AskForMUGENPath": "extension.vscode-mtldbg.getFileInput"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "await-notify": "^1.0.1"
  }
}
